{
  "name": "moni-url-short",
  "version": "1.0.0",
  "description": "Production URL shortener with click tracking",
  "private": true,
  "workspaces": [
    "apps/*",
    "functions"
  ],
  "scripts": {
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:functions": "cd functions && npm run serve",
    "dev:all": "concurrently \"npm run dev:admin\" \"npm run dev:functions\"",
    "build": "npm run build:admin && npm run build:functions",
    "build:admin": "cd apps/admin && npm run build",
    "build:functions": "cd functions && npm run build",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "emulator": "firebase emulators:start",
    "test": "npm run test:functions",
    "test:functions": "cd functions && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "firebase-tools": "^13.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": "20"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "dependencies": {
    "firebase-admin": "^12.7.0"
  }
}
